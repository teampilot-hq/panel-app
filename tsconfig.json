{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "paths": {
      "~/components/*": [
        "./src/components/*"
      ],
      "~/constants/*": [
        "./src/constants/*"
      ],
      "~/utils/*": [
        "./src/utils/*"
      ],
      "~/contexts/*": [
        "./src/contexts/*"
      ],
      "~/hooks/*": [
        "./src/hooks/*"
      ],
      "~/pages/*": [
        "./src/pages/*"
      ],
      "~/services/*": [
        "./src/services/*"
      ]
    }
  }
}